
<div class="head-movies">
<h2>Iron hack cinema</h2>

<p>click on the movie to check the showtime!</p>

</div>
<div class="container">

<div class="row">

  {{#each movies}}
    <div class="col-4">
      <figure>
        <img src="{{this.image}}" alt="felipao lindao">
      </figure>
      {{this.title}}
      <a href="/movies/{{this._id}}">See more</a>
    </div>
  {{/each}}
</div>
</div>
